{% extends "fields/_field" %}

{% set show_field = options.viewMode is not null %}

{% block content %}
    {% set viewMode = options.viewMode %}
    {% set layout = displayer.tagLayout %}
    {% if viewMode and layout %}
        {% for tag in value %}
            {{ layout.render(tag, viewMode)|raw }}
        {% endfor %}
    {% endif %}
{% endblock %}