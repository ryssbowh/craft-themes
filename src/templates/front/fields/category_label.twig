{% extends "fields/_field" %}

{% set show_field = value|length > 0 %}

{% block content %}
    {% for cat in value %}
        <ul class="category-list">
            <li class="category-list-item">
                {% if options.linked and cat.url %}
                    <a href="{{ cat.url }}">
                        {{ cat.title }}
                    </a>
                {% else %}
                    {{ cat.title }}
                {% endif %}
            </li>
        </ul>
    {% endfor %}
{% endblock %}