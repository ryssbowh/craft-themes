{% extends "fields/_field" %}

{% block content %}
    {{ d(value, options) }}
    {% if value %}
        {% if options.firstName %}
            {{ value.firstName }}
        {% endif %}
        {% if options.lastName %}
            {{ value.lastName }}
        {% endif %}
        {% if options.email %}
            {{ value.email }}
        {% endif %}
    {% endif %}
{% endblock %}