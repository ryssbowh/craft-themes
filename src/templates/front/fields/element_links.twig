{% extends "fields/_field" %}

{% macro element_link(element, options) %}
    <a href="{{ element.url }}"{% if options.newTab %} target="_blank"{% endif %}{% if options.hasOption('download') and options.download %} download{% endif %}>
        {{ options.label == 'title' ? element.title : (options.label == 'filename' ? element.filename : options.custom) }}
    </a>
{% endmacro %}

{% block content %}
    {% if displayer.limit == 1 %}
        {{ _self.element_link(value.0, options) }}
    {% else %}
        {% for element in value %}
            <ul class="element-list">
                <li class="element-list-item">
                    {{ _self.element_link(element, options) }}
                </li>
            </ul>
        {% endfor %}
    {% endif %}
{% endblock %}