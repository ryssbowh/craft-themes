{% extends "blocks/block" %}
    
{% block content %}
    <form method="post" accept-charset="UTF-8">
        {{ csrfInput() }}
        {{ actionInput('users/login') }}

        <label for="loginName">{{ 'Username or email'|t('site') }}</label>
        {{ input('text', 'loginName', craft.app.user.rememberedUsername, {
            id: 'loginName',
            autocomplete: 'username'
        }) }}

        <label for="password">{{ 'Password'|t('site') }}</label>
        {{ input('password', 'password', null, {
            id: 'password',
        }) }}

        <label>
            {{ input('checkbox', 'rememberMe', '1') }}
            Remember me
        </label>

        <button type="submit">{{ 'Login'|t('site') }}</button>

        {% if errorMessage is defined %}
            <p>{{ errorMessage }}</p>
        {% endif %}
    </form>

    <p><a href="{{ url('reset-password') }}">{{ 'Forgot your password?'|t('site') }}</a></p>
{% endblock %}