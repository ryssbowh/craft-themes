{% import "_includes/forms" as forms %}

{{
    forms.textField({
        type: 'number',
        value: options.truncated,
        name: 'truncated',
        label: 'Truncated'|t('themes'),
        placeholder: 'Character limit'|t('themes')
    })
}}
{{
    forms.textField({
        name: 'ellipsis',
        value: options.ellipsis,
        label: 'Ellipsis'|t('theme')
    })
}}

{{
    forms.lightswitchField({
        on: options.linked,
        name: 'linked',
        label: 'Link ellipsis to entry'|t('themes')
    })
}}